@model CommandePageViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio sections-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>Super keba</h2>
            <p>Produits du jour</p>
        </div>

        <div class="portfolio-isotope" data-portfolio-filter="*" data-portfolio-layout="masonry" data-portfolio-sort="original-order" data-aos="fade-up" data-aos-delay="100">

            <div>
                <ul class="portfolio-flters">
                    <li data-filter="*" class="filter-active">All</li>
                    <li data-filter=".filter-menu">Menu</li>
                    <li data-filter=".filter-product">Produit</li>
 
                </ul><!-- End Portfolio Filters -->
            </div>

            <div class="row gy-4 portfolio-container">

                @foreach (Menu item in Model.Menus)
                {
                    <partial name="_PartialMenuBlock.cshtml" model="item"  ></partial>
                }

                 @foreach (Product item in Model.Products)
                {
                    <partial name="_PartialProductBlock.cshtml" model="item"  ></partial>
                }

            </div><!-- End Portfolio Container -->

        </div>

    </div>
</section><!-- End Portfolio Section -->